@{
    ViewData["Title"] = "Register";
}

<div>
    @using (Html.BeginForm("Register", "Home", FormMethod.Post))
    {
        <div class="form-group row">
            <div class="col-2"><label>First Name:</label></div>
            <div class="col-2"><input id="firstName" type="text" name="firstName" /></div>
        </div>
        <div class="form-group row">
            <div class="col-2"><label>Last Name:</label></div>
            <div class="col-2"><input id="lastName" type="text" name="lastName" /></div>
        </div>
        <div class="form-group row">
            <div class="col-2"><label>Email:</label></div>
            <div class="col-2"><input id="email" type="text" name="email" /></div>
        </div>
        <div class="form-group row">
            <div class="col-2"><label>Username:</label></div>
            <div class="col-2"><input id="username" type="text" name="username" /></div>
        </div>
        <div class="form-group row">
            <div class="col-2"><label>Password:</label></div>
            <div class="col-2"><input id="password" type="text" name="password" /></div>
        </div>
        <div class="form-group row">
            <div class="col-2"><label>Re-Enter Password:</label></div>
            <div class="col-2"><input id="passwordCheck" type="text" name="passwordCheck" /></div>
        </div>
        <input id="register" type="submit" value="Register" />
        <a asp-action="Index" asp-controller="Home">Cancel</a>
    }
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</div>