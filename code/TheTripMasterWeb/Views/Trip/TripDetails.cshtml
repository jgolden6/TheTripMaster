@model Trip
@{
    ViewData["Title"] = "Trip Details";
}

<h2>Trip Details</h2>

<div class="row">
    <div class="col">
        @using (Html.BeginForm("TripDetails", "Trip", FormMethod.Post))
        {
            <div class="form-group row">
                <div class="col-2"><label>Name:</label></div>
                <div class="col-2"><input readonly="readonly" value="@Model.Name " id="name" type="text" name="name" asp-for="Name" /></div>
            </div>

            <br />

            <div class="form-group row">
                <div class="col-2">
                    @Html.Label("Start Date:")
                </div>
                <div class="col-2"><input id="startDateTime" name="startDateTime" type="datetime-local" asp-for="StartDate" /></div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    @Html.Label("End Date:")
                </div>
                <div class="col-2"><input id="endDateTime" name="endDateTime" type="datetime-local" asp-for="EndDate" /></div>
            </div>

            <input id="editTrip" type="submit" value="Edit" />
            <a asp-action="Homepage" asp-controller="Home">Back</a>
        }
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="col">
        <h3>Waypoints</h3>
        <table class="table table-bordered table-striped table-sm">
            <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Start Date</th>
                <th>End Date</th>
            </tr>
            </thead>
            <tbody>
            @foreach (Waypoint waypoint in Model.Waypoints)
            {
                <tr>
                    <td>
                        <a asp-action="" asp-controller="Trip" id=@waypoint.WaypointName>@waypoint.WaypointName</a>
                    </td>
                    <td>@waypoint.StartDate</td>
                    <td>@waypoint.EndDate</td>
                </tr>
            }
            </tbody>
        </table>
        <a asp-action="AddWaypoint" asp-controller="Trip" asp-route-name="@Model.Name">Add Waypoint</a>
    </div>
</div>
