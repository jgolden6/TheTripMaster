@model Waypoint
@{
    ViewData["Title"] = "Add Transportation";
}

<h2 style="padding-bottom: 10px; padding-top: 10px">Add Transportation</h2>

<div>
    @using (Html.BeginForm("AddWaypoint", "Waypoint", FormMethod.Post))
    {
        <div style="padding-bottom: 40px" class="form-group row">
            <div class="col-2"><label>Trip Name:</label></div>
            <div class="col-4"><input class="form-control" readonly="readonly" id="tripName" type="text" name="tripName" asp-for="TripName" /></div>
        </div>

        <div style="padding-bottom: 20px" class="form-group row">
            <div class="col-2"><label>Transport Type:</label></div>
            <select class="col-4" id="waypointName" type="text" name="waypointName" title="Type" asp-for="WaypointName" asp-items="new SelectList(Enum.GetNames(typeof(TransportationType)))">Select a travel method</select>
        </div>
        

        <div style="padding-bottom: 20px" class="form-group row">
            <div class="col-2">
                @Html.Label("Start Date:")
            </div>
            <div class="col-4"><input id="startDate" name="startDate" type="datetime-local" asp-for="StartDate" /></div>
        </div>

        <div style="padding-bottom: 20px" class="form-group row">
            <div class="col-2">
                @Html.Label("End Date:")
            </div>
            <div class="col-4"><input id="endDate" name="endDate" type="datetime-local" asp-for="EndDate" /></div>
        </div>
        
        <input id="addWaypoint" asp-action="AddTransportation" asp-route-name="@Model.TripName" type="submit" value="Add" />
        <a class="btn-group" asp-action="SelectedTripDetails" asp-controller="Trip">Cancel</a>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    }
</div>